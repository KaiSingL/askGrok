{
  "manifest_version": 3,
  "name": "Quick Grok",
  "version": "1.0",
  "description": "Select text on any webpage and quickly ask Grok about it with an optional prompt.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://grok.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}